<%-  include("partials/header"); -%>

    <% posts.forEach(function(post){ %>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <% if (post.title === "Home") {%>

                <%= post.post %>
                    <% } else{ %>

                        <%= post.post.substring(0, 100).concat('...') + " "  %> <a href="/posts/<%= post._id %>">Read more</a>
                            <% } %>
        </p>
        <% })%>

            <%-  include("partials/footer"); -%>